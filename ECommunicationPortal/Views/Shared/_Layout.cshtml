<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">

    <link href="~/Content/assest/css/animate.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://npmcdn.com/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://npmcdn.com/bootstrap/dist/css/bootstrap-theme.min.css">*@
    <link href="~/Content/assest/css/bootstrap-submenu.css" rel="stylesheet" />
    <link href="~/Content/assest/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/assest/css/leaflet.css" rel="stylesheet" />
    <link href="~/Content/assest/css/map.css" rel="stylesheet" />
    <link href="~/Content/assest/css/jquery.mCustomScrollbar.css" rel="stylesheet" />
    <link href="~/Content/assest/css/dropzone.css" rel="stylesheet" />
    <link href="~/Content/assest/css/style.css" rel="stylesheet" />
    <link href="~/Content/assest/css/skins/default.css" rel="stylesheet" />
    <link href="/node_modules/ng2-toastr/bundles/ng2-toastr.min.css" rel="stylesheet" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" type="text/css" />

    <!-- Favicon icon -->
    <link rel="shortcut icon" href="~/Content/assest/images/emaillogo.png" type="image/x-icon">
    <!-- Google fonts -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800%7CPlayfair+Display:400,700%7CRoboto:100,300,400,400i,500,700">
    <link href="~/Content/assest/css/ie10-viewport-bug-workaround.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Content/assest/js/jquery-2.2.0.min.js"></script>
    <script type="text/javascript" src="~/Content/assest/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/assest/js/jquery.easing.1.3.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/assest/js/ie-emulation-modes-warning.js"></script>
    <script src="~/node_modules/core-js/client/shim.min.js"></script>
    <script src="~/node_modules/zone.js/dist/zone.js"></script>
    <script src="~/node_modules/systemjs/dist/system.src.js"></script>
    <script src="~/systemjs.config.js"></script>
    <script>
        System.import('app').catch(function (err) { console.error(err); });
    </script>

</head>
<body>
    <div class="elements-page">
        <div class="container">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="sub-footer" style="position:fixed;bottom:0;width:100%;">
        <div class="container">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="copy-right">&copy; @DateTime.Now.Year <a href="#">E-Communication Portal </a>‐ All Rights Reserved </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(".nav li").click(function () {
            $(this).addClass("active").siblings().removeClass("active");
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
